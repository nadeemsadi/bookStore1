<!DOCTYPE html>
<html>
  <head>
    <title>Book Store</title>
    
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
</head>

<body style="background-color:#95c200">

	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<%= link_to "BOOK STORE", root_path, class: "navbar-brand" %>
			</div>		
			<ul class= "nav navbar-nav navbar-right">
				<% if user_signed_in? %>
					<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
				<% else %>
					<li><%= link_to "Sign In", new_user_registration_path %></li>
				<% end %>	
			</ul>
			<ul class="nav navbar-nav navbar-right">		
				<li><%= link_to "Book Shop ", products_path %></li>
				<li><%= link_to "Add Book", new_product_path %></li>	
				<li><%= link_to "Contact Us", page_contact_path %></li>				
			</ul>
		</div>	
	</nav>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<%= yield %>
	
</body>
</html>
