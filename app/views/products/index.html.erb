<p id="notice"><%= notice %></p>

<h1 style ="color: #201bc1; margin-left: 10px">BOOK STORE ~ ~ ~ 4GirlBooks.com</h1>  

<table style = "border: 5px solid ; background-color: white; width: 100%; height: 100%">
  
    <tr style="background-color: #f6546a; font:bold 20px; border: 1px solid">
      <th style = "text-align:center; width: 120px; height: 100px; font-size: 20px; border: 1px solid">IMAGE </th>
      <th style = "text-align:center; width: 200px; height: 100px; font-size: 20px; border: 1px solid">TITLE</th>
      <th style = "text-align:center; width: 300px; height: 100px; font-size: 20px; border: 1px solid">DESCRIPTION</th>      
      <th style = "text-align:center; width: 100px; height: 100px; font-size: 20px; border: 1px solid">PRICE</th>
      <th style = "text-align:center; width: 100px; height: 100px; font-size: 20px; border: 1px solid">CATEGORY</th>            
      <th colspan="4" style = "text-align:center; width: 100px; height: 100px; font-size: 20px; border: 1px solid">SHOPPING</th>
    </tr>
  

  
    <% @products.each do |product| %>
      <tr>
        <td style= "text-align:center; border: 1px solid"><%= image_tag(product.image_url, width: '150px') %></td>
        <td style= "text-align:center; border: 1px solid"><strong><%= product.title %></strong></td>
        <td style= "text-align:left; border: 1px solid"><%= product.description %></td>        
        <td style= "text-align:center; border: 1px solid"><strong><%= product.price %>&nbsp;$</strong></td>
        <td style= "text-align:center; border: 1px solid"><%= product.category %></td>        
        <td style= "text-align:center; width: 65px; height: 100px; border: 1px solid"><%= link_to 'Show', product %></td>
        <td style= "text-align:center; width: 50px; height: 100px;border: 1px solid"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td style= "text-align:center; width: 50px; height: 100px; border: 1px solid"><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure to remove this book ?' } %></td>
        <td style= "text-align:center; width: 100px; height: 100px; border: 1px solid"><a href="/cart/<%= product.id %>"> <strong>Add To Cart</strong></a></td>
      </tr>
    <% end %>
  
</table>



