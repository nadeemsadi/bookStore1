      <td class="field" style= "padding-left:10px;  width: 300px; height: 50px; font-size: 15px;border: 1px solid"><strong><%= f.text_field :title %></strong></td>
    </tr>

    <tr style="background-color: #f6546a; font:bold 20px; border: 1px solid">    
