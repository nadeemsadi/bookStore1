<p id="notice"><%= notice %></p>

<h4 style="margin-left: 20px; color: #fff">
	<strong><%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %></strong></h4>


<table style = "border: 5px solid; background-color: white; width: 80%; height: 60%; margin-left: 20px">
    <tr>
        <td colspan="2"><h3><strong><%= @product.title %></strong></h3></td>
    </tr>

    <tr>
        <td rowspan="2"><%= image_tag(@product.image_url, width: '150px') %></td>

        <td style="padding-left: 10px">
        	<strong>Category: </strong><%= @product.category %>
        	<br><strong>Description:</strong><%= @product.description %>
        	<br><strong>Price: <%= number_to_currency(@product.price, :unit => '$') %></strong>
        </td>
    </tr>
    
</table>
